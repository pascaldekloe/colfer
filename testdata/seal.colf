// Package seal tests all supported data types in various combinations.
// The generated code for each language is committed into the repository
// to display and seal the effects of each change.
package seal

// BaseTypes contains each data type supported by Colfer, including a single-line comment.
type BaseTypes struct {
	// Test 8 bit–unsigned integers.
	u8 uint8
	// Test 8 bit–signed integers.
	i8 int8
	// Test 16 bit–unsigned integers.
	u16 uint16
	// Test 16 bit–signed integers.
	i16 int16
	// Test 32 bit–unsigned integers.
	u32 uint32
	// Test 32 bit–signed integers.
	i32 int32
	// Test 64 bit–unsigned integers.
	u64 uint64
	// Test 64 bit–signed integers.
	i64 int64

	// Tests single precision–floating points.
	f32 float32
	// Tests double precision–floating points.
	f64 float64

	// Test timestamps (with nanosecond precision).
	t timestamp
	// Test Unicode strings of variable size.
	s text
	// Test binary flags.
	b bool
}

// ArrayTypes contains all BaseTypes in array form, excluding bool(eans).
//
// Comments span multiple lines as opposed to BaseTypes.
type ArrayTypes struct {

	// Two values for each field break word boundaries in encoding.
	// 
	// The minimium size of this data structure is 2 + header = 5.
	u8n2  [2]uint8
	// empty line
	//
	i8n2  [2]int8
	// indent space only
	// 
	u16n2 [2]uint32
	// blank space
	//  
	i16n2 [2]int32
	// 	tab
	//	without indent space
	u32n2 [2]uint16
	i32n2 [2]int16
	u64n2 [2]uint64
	i64n2 [2]int64

	// floating points
	f32n2 [2]float32
	f64n2 [2]float64

	// complex types
	tn2   [2]timestamp
	sn2   [2]text
}

// ListTypes contains all list types supported by Colfer.
type ListTypes struct {
	// opaque values
	a8l []opaque8
	a16l []opaque16
	a32l []opaque32
	a64l []opaque64

	// floating points
	f32l []float32
	f64l []float64

	// complex types
	tl []timestamp
	sl []text
}

// OpaqueTypes is fixed in size. The variable sized are in ListTypes.
type OpaqueTypes struct {
	// Test 8-bit values.
	a8 opaque8
	// Test 8-bit arrays.
	a8n2 [2]opaque8

	// Test 16-bit values.
	a16 opaque16
	// Test 16-bit arrays.
	a16n2 [2]opaque16

	// Test 32-bit values.
	a32 opaque32
	// Test 32-bit arrays.
	a32n2 [2]opaque32

	// Test 64-bit values.
	a64 opaque64
	// Test 64-bit arrays.
	a64n2 [2]opaque64
}

// ManyFlags encodes over multiple bit-fields.
type ManyFlags struct {
	b1 bool
	b2 bool
	b3 bool
	b4 bool
	b5 bool
	b6 bool
	b7 bool
	// last in bit field
	b8 bool

	// second bit-field
	b9 bool
	b10 bool
	// because we can
	shift opaque32
	b11 bool
	b12 bool
	b13 bool
	b14 bool
	b15 bool
	b16 bool

	// third bit-field
	b17 bool

	end opaque8
}

// NestedTypes contains embedded data structures.
type NestedTypes struct {
	// variable size
	list []BaseTypes
}

// DromedaryCase mixes name conventions.
// Its serial size has a natural limit.
type dromedaryCase struct {
	// title-case option
	PascalCase int32
	// best-case scenario
	with_snake opaque8
}
